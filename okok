// script.js

const content = document.getElementById("content");
const menuItems = document.querySelectorAll("#menu li");
const languageSwitcher = document.getElementById("language-switcher");
const themeToggle = document.getElementById("theme-toggle");

let currentLang = "fr";

const translations = {
  fr: {
    home: "Bienvenue sur mon univers sombre et Ã©lÃ©gant.",
    art: "Voici une galerie de mes crÃ©ations mystÃ©rieuses.",
    about: "Je suis Morgan, artiste de lâ€™ombre et de la lumiÃ¨re.",
  },
  en: {
    home: "Welcome to my dark and elegant universe.",
    art: "Hereâ€™s a gallery of my mysterious creations.",
    about: "Iâ€™m Morgan, artist of shadow and light.",
  },
};

function loadPage(page) {
  content.textContent = translations[currentLang][page];
}

menuItems.forEach(item => {
  item.addEventListener("click", () => {
    const page = item.dataset.page;
    loadPage(page);
  });
});

languageSwitcher.addEventListener("change", () => {
  currentLang = languageSwitcher.value;
  const activePage = document.querySelector("#menu li.active")?.dataset.page || "home";
  loadPage(activePage);
});

themeToggle.addEventListener("click", () => {
  document.body.classList.toggle("light");
});

// Charger la page par dÃ©faut
loadPage("home");
